extends ../layout

block content
    a.btn.btn-success(href='/usuarios/create') Nuevo usuario

    br
    br

    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Nombre
                th(scope='col') Email
                th(scope='col') Verificado
                th(scope='col')
                th(scope='col')
        tbody
             each usuario in usuarios
                tr
                    td(scope='row') 
                        = usuario._id
                    td= usuario.nombre
                    td= usuario.email
                    td= usuario.verificado ? 'si' : 'no'
                    td
                        a.btn(href = 'usuarios/'+usuario.id+'/update') Edit
                    td
                        form.inline(method="post" action="usuarios/"+usuario.id+'/delete') 
                            input(type="hidden" name='id' value= usuario.id)
                            button.link-button.btn.btn-danger(type='submit' name='submit_param' value='Eliminar') Eliminar
