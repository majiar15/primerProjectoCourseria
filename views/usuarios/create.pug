extends ../layout

block content
    a(href='/usuarios') Volver

    br
    br
    br

    h1 Nuevo Usuarios

    br
    br

    form(action="/usuarios/create", method="post")
        .form-group
            label(for="nombre") Nombre:
            input#nombre.form-control(type="text" name='nombre' value= usuario.nombre class=errors.nombre ? 'is-invalid' : '')
            if errors.nombre
                small#nombreHelp.text-danger
                    = errors.nombre.message
        .form-group
            label(for="email") Email:
            input#email.form-control(type="email" name='email' value= usuario.email class=errors.email ? 'is-invalid' : '')
            if errors.email
                small#emaileHelp.text-danger
                    = errors.email.message
        
        .form-group
            label(for="pwd") Password:
            input#password.form-control(type="password" name='password' value= usuario.password class=errors.password ? 'is-invalid' : '')
            if errors.password
                small#passwordHelp.text-danger
                    = errors.password.message
        
        .form-group
            label(for="confirm_pwd") Confirmar Password:
            input#confirm_pwd.form-control(type="password" name='confirm_pwd' value= usuario.confirm_pwd class=errors.confirm_pwd ? 'is-invalid' : '')
            if errors.confirm_pwd
                small#confirm_pwdHelp.text-danger
                    = errors.confirm_pwd.message

        br
        br
        input.btn.btn-primary(type="submit" value='Ok')           
        