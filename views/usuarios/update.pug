extends ../layout

block content
    a(href='/usuarios') Volver

    br
    br
    br

    h1 actualizando usuario

    br
    br

    form(action=`/usuarios/${usuario._id}/update`, method="post")
        .form-group
            label(for="nombre") Nombre:
            input#nombre.form-control(type="text" name='nombre' value=usuario.nombre class=errors.nombre?'is-invalid':'')
            if errors.nombre
                small#nombreHelp.text-danger
                    = errors.nombre.message

        br
        br
        input.btn.btn-primary(type="submit" value='Ok')           
        